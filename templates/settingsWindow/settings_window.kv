#:kivy 1.0
<SettingWindow>:
    name: "settings"

    GridLayout:
        cols: 2
        BoxLayout:
            orientation: "vertical"
            size_hint: 10000,1
            Label:
                background_color: 0,1,0,0.7
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                id: click_label
                text: "Setting Screen"
                font_size: 32
            Spinner:
                id: spinner_id
                pos_hint: {'center_x':0.5}
                size_hint: 0.6, None
                height: 70
                text: "Seleccione su c√°mara"
                values: root.values_array()
                on_text: root.spinner_clicked(spinner_id.text)
            Label:
                text: ''
            

        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            Button:
                text: "X"
                font_size: 40
                background_color: 1,0,0,1
                size_hint:[None,None]
                size: [70,35]
                on_release: 
                    root.manager.transition.direction = "down"
                    app.root.current = "main"
