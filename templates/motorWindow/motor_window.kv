# Creación de clases
# Clase servo individual
<ManualServo>:
    orientation: "vertical"
    size_hint:[None, 1]
    width: 450
    BoxLayout:
        orientation:"vertical"
        FloatLayout:
            Image:
                pos_hint: {'center_x':0.535,'center_y': -0.152}
                source: root.cuerpo_path
                size_hint: [None, None]
                size: [250,250]

            Image:
                pos_hint: {'center_x':root.pos_x_brazo,'center_y': root.pos_y_brazo}
                size_hint:[None,None]
                size: [290,110]
                source: root.movil_path
                allow_stretch: True
                keep_ratio: True
                canvas.before: 
                    PushMatrix
                    Rotate:
                        axis: 0,0,1
                        angle: root.servo_angle
                        origin: self.center
                canvas.after: 
                    PopMatrix
        FloatLayout:
            Label:
                text: root.servo_nombre
                color: colorUVG
                bold: True
                pos_hint: {'center_x':0.32,'center_y': 0.5}
                font_size: 25
                canvas.before: 
                    PushMatrix
                    Rotate:
                        axis: 0,0,1
                        angle: 90
                        origin: self.center
                canvas.after: 
                    PopMatrix
            Label:
                text: root.servo_angle_text
                color: (125/255, 194/255, 61/255, 1)
                bold: True
                font_size: 35
                pos_hint: {'center_x':root.pos_x_text,'center_y': root.pos_y_text}
                background_color: (0, 0, 0, 1) 
                size_hint: [None, None]
                width: 81
                height: 55
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
        Label:
            text: ""
            size_hint: [1, None]
            height: -10
        Slider:
            min: root.min_val
            max: root.max_val
            step: 1
            value: root.slider_val
            orientation: "horizontal"
            value_track: True
            value_track_color: colorUVG
            value_track_width: 7
            background_width: 60
            cursor_image: 'templates/motorWindow/imagenes/slider-icon.png'
            cursor_size: [40,40]
            on_value: root.slider_func(self.value)

# clase para agrupación de servos
<ServosBoxLayout@BoxLayout>:
    orientation:"horizontal"
    size_hint: [1, None]
    height: 450


<EmojiOptions@BoxLayout>:
    orientation: "horizontal"
    size_hint: [1, None]
    height: 70
    Label:
        text: ""
        size_hint: [0.1, 1]
    Button:
        background_normal: ''
        background_down: ''
        background_color: (0, 0, 0, 0)
        color_background: (0,141/255,54/255,1)
        canvas.before:
            Color:
                rgba: self.color_background
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        font_size: 21
        text: root.name
        size_hint: [None, 1]
        width: 300
        on_press: 
            self.color_background = colorUVGPress
        on_release: 
            self.color_background = colorUVG
            root.emoji_press()
    Label:
        text: ""
    Button:
        text:"X"
        font_size: 30
        size_hint: [None, 1]
        width: 80
        background_normal: ''
        background_down: ''
        background_color: (0, 0, 0, 0)
        color_background: (.96, .23, .23, 1)
        canvas.before:
            Color:
                rgba: self.color_background
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [25]
        on_press: 
            self.color_background = (.84, .02, .02, 1)
        on_release: 
            self.color_background = (.96, .23, .23, 1)
            root.delete_emoji()
    Label:
        text: ""
        size_hint: [0.1, 1]


